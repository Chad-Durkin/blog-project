{{#if newGameForm}}
    <h1>New Game under the {{category.category}} category</h1>
    <div class="new-game">
        <form class="game-form">
            <div class="form-group">
                <label for="name">Game Name</label>
                {{input value=name class="name"}}
            </div>
            <div class="form-group">
                <label for="description">Game Description</label>
                {{input value=description class="description"}}
            </div>
            <div class="form-group">
                <label for="playerCount">How many players can play this game?</label>
                {{input value=playerCount class="playerCount"}}
            </div>
            <div class="form-group">
                <label for="image">Add an image link for this game</label>
                {{input value=image class="image"}}
            </div>
            <button {{action 'saveGame'}}>Save</button>
        </form>
    </div>
{{else}}
    <button {{action 'gameFormShow'}}>New Game for {{category.category}}</button>
{{/if}}
