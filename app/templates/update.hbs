<h3>Editing {{model.name}}</h3>

<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label><br>
      {{input value=model.name class="name form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Description</label><br>
      {{input value=model.description class="description form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label><br>
      {{input value=model.image class="image form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Player Count</label><br>
      {{input value=model.playerCount class="playerCount form-control"}}
    </div>

    <button {{action 'update' model}}>Save</button>
  </form>
</div>
